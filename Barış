<h2>Benimle barışmak istiyor musun?</h2>
<div class="buttons">
    <button id="evet" onclick="evetTiklandi()">Evet</button>
    <button id="hayir" onmouseover="kac()">Hayır</button>
</div>

<script>
function evetTiklandi() {
    window.open("https://www.instagram.com/zolyadkin/", "_blank"); // Hedef URL'yi buradan değiştirebilirsin
}

function kac() {
    let hayir = document.getElementById("hayir");
    let maxX = window.innerWidth - hayir.offsetWidth;
    let maxY = window.innerHeight - hayir.offsetHeight;
    
    let x = Math.random() * maxX;
    let y = Math.random() * maxY;

    hayir.style.left = x + "px";
    hayir.style.top = y + "px";
}
</script>
